<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
    <servlet-name>getAllContactsServlet</servlet-name>
    <servlet-class>ru.academits.servlet.GetAllContactsServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>addContactsServlet</servlet-name>
    <servlet-class>ru.academits.servlet.AddContactServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>deleteContactsServlet</servlet-name>
    <servlet-class>ru.academits.servlet.DeleteContactServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>getAllContactsServlet</servlet-name>
    <url-pattern>/phonebook/get/all?filter=</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>addContactsServlet</servlet-name>
    <url-pattern>/phonebook/add</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>deleteContactsServlet</servlet-name>
    <url-pattern>/phonebook/delete?id=</url-pattern>
  </servlet-mapping>
</web-app>
